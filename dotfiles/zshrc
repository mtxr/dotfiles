# Bootstrap
. $HOME/.zsh/bootstrap.zsh

# Allow local customizations in the $HOME/.zshrc_local_before file
[ -s $HOME/.zshrc_local_before ] &&. $HOME/.zshrc_local_before

# Settings
. $HOME/.zsh/settings.zsh

# External plugins (initialized before)
. $HOME/.zsh/plugins_before.zsh

# External settings
. $HOME/.zsh/external.zsh

# Aliases
. $HOME/.zsh/aliases.zsh

# Functions
. $HOME/.zsh/functions.zsh

# Custom prompt
[ "$ZSH_THEME" = "default" ] && . $HOME/.zsh/prompt.zsh

# Syntax highlighting
. $HOME/.zsh/syntax.zsh

# External plugins (initialized after)
. $HOME/.zsh/plugins_after.zsh

# Allow local customizations in the $HOME/.zshrc_local_after file
[ -s $HOME/.zshrc_local_after ] && . $HOME/.zshrc_local_after

[ -s $HOME/.zsh-load/loader.zsh ] && . $HOME/.zsh-load/loader.zsh

[ -s "${HOME}/.iterm2_shell_integration.zsh" ] && . "${HOME}/.iterm2_shell_integration.zsh"
