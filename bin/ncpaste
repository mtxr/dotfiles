#!/bin/bash

ADDRESS='localhost'
FILENAME=/dev/stdout

usage () {
  cat <<-EOF
		Usage: ncpaste [output_filename] [options]
		  Options:
		    -h, --host <hostname> Specify host or ip origin

		  Examples:
		    Output to stdout:
		      $ ncpaste
		    Output to file:
		      $ ncpaste file.out
		    Redirect output:
		      $ ncpaste > file.out
		      $ ncpaste > /dev/null
		    Reading from remote server to stdout:
		      $ ncpaste -h 192.168.1.1
		    Piping:
		      $ ncpaste | grep 'string'
	EOF
}

usage
exit 0
for i in "$@"
do
case $i in
    -h=*|--host=*)
      ADDRESS="${i#*=}"
      shift # past argument=value
    ;;
    -h|--host)
      ADDRESS=""
      shift
    ;;
    *)
      if [ "$ADDRESS" = "" ]; then
        ADDRESS="$i"
      else
        FILENAME="$i"
      fi
    ;;
esac
done

(nc "$ADDRESS" 13338 | pv -b > "$FILENAME") || ( usage )
